<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.TeacherFragments.TeachersFeeStudentView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/teacherView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/shadow_background"
            android:elevation="2dp"
            app:cardCornerRadius="6dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp">

                <TextView
                    android:id="@+id/temp1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_edit_pen"
                    android:gravity="center"
                    android:text="Student's Fee"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/temp2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/temp2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Next Reminder on"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/temp1"

                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/studentFee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/holo_green_dark"
                    app:layout_constraintEnd_toEndOf="@+id/temp1"
                    app:layout_constraintStart_toStartOf="@+id/temp1"
                    app:layout_constraintTop_toBottomOf="@+id/temp1" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="@+id/temp2"
                    app:layout_constraintStart_toStartOf="@+id/temp2"
                    app:layout_constraintTop_toBottomOf="@+id/temp2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/studentView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="6dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/subjectClassS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Java (CS)"
                    android:textSize="18sp"
                    android:textColor="@color/darkgrey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    app:layout_constraintTop_toBottomOf="@+id/subjectClassS"
                    android:layout_marginHorizontal="8dp"
                    app:layout_constraintStart_toStartOf="@+id/subjectClassS"
                    app:layout_constraintEnd_toEndOf="@+id/subjectClassS"
                    android:background="@color/mainCustomPrimary"
                    android:layout_width="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="1dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:padding="6dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/subjectClassS">

                    <TextView
                        android:id="@+id/temp1S"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Student's Fee"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/temp2S"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/temp2S"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Teacher"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/temp1S"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/studentFeeS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/holo_green_light"
                        app:layout_constraintEnd_toEndOf="@+id/temp1S"
                        app:layout_constraintStart_toStartOf="@+id/temp1S"
                        app:layout_constraintTop_toBottomOf="@+id/temp1S" />

                    <TextView
                        android:id="@+id/teacherS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="@+id/temp2S"
                        app:layout_constraintStart_toStartOf="@+id/temp2S"
                        app:layout_constraintTop_toBottomOf="@+id/temp2S" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondLightBG"
            android:padding="4dp">

            <TextView
                android:id="@+id/temp3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Received"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/temp4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/temp4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total Advance"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/temp3"

                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/totalRec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/holo_green_light"
                app:layout_constraintEnd_toEndOf="@+id/temp3"
                app:layout_constraintStart_toStartOf="@+id/temp3"
                app:layout_constraintTop_toBottomOf="@+id/temp3" />

            <TextView
                android:id="@+id/totalDue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="@+id/temp4"
                app:layout_constraintStart_toStartOf="@+id/temp4"
                app:layout_constraintTop_toBottomOf="@+id/temp4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerFeeStudent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="6dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondLightBG"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/addRec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/background_popups"
                android:elevation="2dp"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="₹ Add Received"
                android:textColor="@android:color/holo_green_light" />

            <TextView
                android:id="@+id/addDue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/background_popups"
                android:elevation="2dp"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="₹ Add Dues"
                android:textColor="@android:color/holo_red_light" />

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
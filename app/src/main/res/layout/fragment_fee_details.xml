<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGround"
    tools:context=".Fragments.SubFragments.FeeDetailsTeacher">


    <androidx.cardview.widget.CardView
        android:id="@+id/temp0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        android:elevation="2dp"
        android:background="@drawable/background_blocks_12dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/temp1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/subject"
                android:textColor="@color/secondary_text"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/temp2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/className"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maths"
                app:layout_constraintEnd_toEndOf="@+id/temp1"
                app:layout_constraintStart_toStartOf="@+id/temp1"
                app:layout_constraintTop_toBottomOf="@+id/temp1" />

            <TextView
                android:id="@+id/temp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/start_date"
                android:textColor="@color/secondary_text"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/temp1"
                app:layout_constraintStart_toStartOf="@+id/temp1"

                app:layout_constraintTop_toBottomOf="@+id/className" />

            <TextView
                android:id="@+id/startDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 May 2021"
                app:layout_constraintEnd_toEndOf="@+id/temp1"
                app:layout_constraintStart_toStartOf="@+id/temp1"
                app:layout_constraintTop_toBottomOf="@+id/temp3" />

            <TextView
                android:id="@+id/temp2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/classroom_fees"
                android:textColor="@color/secondary_text"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/temp1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Rs.11/month"
                app:layout_constraintEnd_toEndOf="@+id/temp2"
                app:layout_constraintStart_toStartOf="@+id/temp2"
                app:layout_constraintTop_toBottomOf="@+id/temp2" />

            <TextView
                android:id="@+id/temp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/next_reminder"
                android:textColor="@color/secondary_text"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/temp2"
                app:layout_constraintStart_toStartOf="@+id/temp2"
                app:layout_constraintTop_toBottomOf="@+id/className" />

            <TextView
                android:id="@+id/endDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 June 2021"
                app:layout_constraintEnd_toEndOf="@+id/temp2"
                app:layout_constraintStart_toStartOf="@+id/temp2"
                app:layout_constraintTop_toBottomOf="@+id/temp3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/temp02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/secondLightBG"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@+id/temp0">

        <TextView
            android:id="@+id/temp5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/total_received"
            app:layout_constraintEnd_toStartOf="@+id/temp6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/totalRec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.10.00/-"
            android:textColor="@android:color/holo_green_dark"
            app:layout_constraintEnd_toEndOf="@+id/temp5"
            app:layout_constraintStart_toStartOf="@+id/temp5"
            app:layout_constraintTop_toBottomOf="@+id/temp5" />

        <TextView
            android:id="@+id/temp6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/total_due"
            app:layout_constraintEnd_toStartOf="@+id/temp7"
            app:layout_constraintStart_toEndOf="@+id/temp5"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/totalDue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.10.00/-"
            app:layout_constraintEnd_toEndOf="@+id/temp6"
            app:layout_constraintStart_toStartOf="@+id/temp6"
            app:layout_constraintTop_toBottomOf="@+id/temp6" />

        <TextView
            android:id="@+id/temp7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/total_advance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/temp6"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/totalAdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.10.00/-"
            app:layout_constraintEnd_toEndOf="@+id/temp7"
            app:layout_constraintStart_toStartOf="@+id/temp7"
            app:layout_constraintTop_toBottomOf="@+id/temp7" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <SearchView
        android:id="@+id/searchFeeDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp02" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:text="@string/details"
        android:textColor="@color/mainCustomPrimary"
        app:layout_constraintEnd_toStartOf="@+id/guide40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchFeeDetails" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />


    <TextView
        android:id="@+id/temp9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/adv_due"
        android:textColor="@color/mainCustomPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guide75"
        app:layout_constraintTop_toBottomOf="@+id/searchFeeDetails" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="@string/received"
        android:textColor="@color/mainCustomPrimary"
        app:layout_constraintEnd_toStartOf="@+id/guide75"
        app:layout_constraintStart_toEndOf="@+id/guide40"
        app:layout_constraintTop_toBottomOf="@+id/searchFeeDetails" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewFeeDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@+id/collectFee"
        app:layout_constraintTop_toBottomOf="@+id/temp9" />

    <Button
        android:id="@+id/collectFee"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circularbluebordersolid"
        android:elevation="2dp"
        android:gravity="center"
        android:minHeight="0dp"
        android:paddingHorizontal="8dp"
        android:text="@string/start_collecting_fees"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="3dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/classNameWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class name"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/subjectNameWebsite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subjectNameWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject Name"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/classNameWebsite" />



        <TextView
            android:id="@+id/addWebsiteClassroom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/first_btn"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="Add"
            android:textAllCaps="true"
            android:paddingVertical="10dp"
            android:textColor="@color/darkgrey"
            android:clickable="true"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>